<?xml version="1.0" encoding="UTF-8"?>

<dataset id="files">
  
  <adapter class="latis.reader.tsml.FileListAdapter"
           pattern="spacecraft(\d+)/instrument(\d+)/mode(\d+)/day(\d+).txt"
           location="/tmp/latis_file_test_large_nested"
           todo_location="${java.io.tmpdir}/latis_file_test" />
           
  <index/>
  <integer id="spacecraftNum"/>
  <integer id="instrumentNum"/>
  <integer id="modeNum"/>
  <integer id="dayNum"/>
  
  <text id="file" length="256"/>
  <integer id="fileSize"/>

</dataset>
